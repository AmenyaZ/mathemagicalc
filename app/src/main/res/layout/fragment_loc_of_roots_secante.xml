<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_margin_top"
        android:text="Secante Method"
        android:textAlignment="center"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/bisection_desc"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/text_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:hint="@string/bisection_enter_eqn"
            android:textAlignment="center" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/std_layout_margin"
        android:text="@string/initial_guess"
        android:textColor="#7e2c1e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/x0"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center_horizontal"
                android:hint="x0"
                android:inputType="numberDecimal|numberSigned"
                android:textAlignment="center" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/x1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:gravity="center_horizontal"
                android:hint="x1"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal|numberSigned"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/std_layout_margin"
        android:text="@string/stopping_criteria"
        android:textColor="#7e2c1e" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/text_iterations"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:hint="@string/iterations"
                android:imeOptions="actionDone"
                android:inputType="numberSigned"
                android:textAlignment="center" />

        </android.support.design.widget.TextInputLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/textview_answer"
        style="@style/AnswerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0.000000"
        android:textAlignment="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_calculate"
        style="@style/AppMaterialTheme.ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/calculate" />

    <Button
        android:id="@+id/button_show_algo"
        style="@style/AppMaterialTheme.ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/show_algorithm" />

    <Button
        android:id="@+id/button_back"
        style="@style/AppMaterialTheme.ButtonStyle.Exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Equations Menu"
        android:textStyle="bold" />
</LinearLayout>