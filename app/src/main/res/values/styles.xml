<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorControlActivated">#00796B</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:colorAccent">#546e7a</item>
        <item name="android:actionBarPopupTheme">@style/MyPopUpTheme</item>
    </style>


    <style name="AppTheme.HeaderStyle" parent="">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:layout_marginTop">@dimen/header_margin_top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AnswerStyle" parent="@style/AppTheme.HeaderStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/answer_vertical_width</item>
        <item name="android:layout_marginBottom">@dimen/answer_vertical_width</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/answerColor</item>
    </style>

    <style name="AppTheme.TextInputHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#26a69a</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="MyPopUpTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorMainBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="AppTheme.ButtonStyle.Exit">
        <item name="android:textColor">@color/blue_900</item>
    </style>

    <style name="MatrixInputStyle">
        <item name="android:inputType">numberSigned|numberDecimal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatrixSolutionStyle">
        <item name="android:layout_marginTop">@dimen/sol_answer_vertical_width</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="matrixEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="MatrixConstantStyle">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EquationInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:inputType">text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.TableHeaderStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TableTextStyle" parent="android:TextAppearance">
        <item name="android:textColor">#3a5e70</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>



</resources>
